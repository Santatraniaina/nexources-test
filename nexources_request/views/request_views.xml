<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="request_list" model="ir.ui.view">
            <field name="name">request.list</field>
            <field name="model">request.request</field>
            <field name="arch" type="xml">
                <list string="Requests">
                    <field name="priority" widget="priority"/>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="responsible_id"/>
                    <field name="creation_date"/>
                    <field name="validation_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="request_form" model="ir.ui.view">
            <field name="name">request.form</field>
            <field name="model">request.request</field>
            <field name="arch" type="xml">
                <form string="Request">
                    <!--
                    <header>
                        <field name="stage_id" widget="rotting_statusbar_duration"
                               options="{'clickable': '1', 'fold_field': 'fold'}"/>
                    </header>
                    -->
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" widget="text" class="field_name" placeholder="e.g. Need more stuff"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="responsible_id"/>
                            </group>
                            <group>
                                <field name="creation_date"/>
                                <field name="validation_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" options="{'collaborative': true}"
                                       placeholder="Add details about your request..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter reload_on_post="True"/>
                </form>
            </field>
        </record>

