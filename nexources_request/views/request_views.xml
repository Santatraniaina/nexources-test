<odoo>
    <data>
        <record id="request_list" model="ir.ui.view">
            <field name="name">request.list</field>
            <field name="model">request.request</field>
            <field name="arch" type="xml">
                <list string="Requests" decoration-expired="deadline_date &lt;= context_today() and state != 'done'">
                    <field name="priority" widget="priority"/>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id" optional="hide"/>
                    <field name="company_id" optional="hide"/>
                    <field name="responsible_id"/>
                    <field name="deadline_date" widget="remaining_days"/>
                    <field name="validation_date"/>
                    <field
                        name="state"
                        decoration-info="state == 'draft'"
                        decoration-primary="state == 'sent'"
                        decoration-warning="state == 'in_progress'"
                        decoration-success="state == 'done'"
                        decoration-muted="state == 'cancel'"
                        widget="badge"
                    />
                </list>
            </field>
        </record>

        <record id="request_form" model="ir.ui.view">
            <field name="name">request.form</field>
            <field name="model">request.request</field>
            <field name="arch" type="xml">
                <form string="Request">
                    <header>
                        <!-- BUTTONS -->
                        <button name="action_send" string="Send" type="object" class="oe_highlight"
                            invisible="state != 'draft'"
                        />
                        <button name="action_in_progress" string="Mark In Progress" type="object" class="oe_highlight"
                            invisible="state != 'sent'"
                        />
                        <button name="action_done" string="Mark as Done" type="object" class="oe_highlight"
                            invisible="state not in ('in_progress', 'sent')"
                        />
                        <button name="action_cancel" string="Cancel" type="object"
                            invisible="state in ('draft','sent', 'cancel')"
                        />
                        <button name="action_set_draft" string="Set to Draft" type="object"
                                invisible="state in ('draft', 'in_progress', 'done')"
                        />
                        <!-- STATUSBAR -->
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent,in_progress,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="e.g. Need more stuff"/>
                            </h1>
                        </div>
                        <separator/>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="company_id"/>
                                <field name="responsible_id"/>
                            </group>
                            <group>
                                <field name="priority"/>
                                <field name="validation_date"/>
                                <field name="deadline_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" options="{'collaborative': true}"
                                       placeholder="Add details about your request..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter reload_on_post="True"/>
                </form>
            </field>
        </record>

        <record id="request_search" model="ir.ui.view">
            <field name="name">request.search</field>
            <field name="model">request.request</field>
            <field name="arch" type="xml">
                <search string="Requests Search">
                    <!-- SEARCH FIELDS -->
                    <field name="name"/>
                    <field name="employee_id"/>
                    <!-- FILTERS -->
                    <filter string="Sent" domain="[('state','=','sent')]" name="sent"/>
                    <filter string="In progress" domain="[('state','=','in_progress')]" name="in_progress"/>
                    <filter string="Done" domain="[('state','=','done')]" name="done"/>
                    <separator/>
                    <filter string="Creation Date" date="create_date" name="create_date">
                        <filter name="create_date_today" string="Today" domain="[('create_date', '&gt;=', 'today')]"/>
                        <filter name="create_date_last_24_hours" string="Last 24 Hours"
                                domain="[('create_date', '&gt;=', 'now -1d')]"/>
                        <filter name="create_date_last_3_days" string="Last 3 Days"
                                domain="[('create_date', '&gt;=', 'today -3d +1d')]"/>
                        <filter name="create_date_last_7_days" string="Last 7 Days"
                                domain="[('create_date', '&gt;=', 'today -7d +1d')]"/>
                    </filter>
                    <!-- GROUP BY -->
                    <group>
                        <filter string="Employee" name="employee" context="{'group_by':'employee_id'}"/>
                        <filter string="Responsible" name="responsible" context="{'group_by':'responsible_id'}"/>
                        <filter string="Department" name="department" context="{'group_by':'department_id'}"/>
                        <filter string="Company" name="company" context="{'group_by':'company_id'}"/>
                        <separator/>
                        <filter string="Priority" name="priority" context="{'group_by':'priority'}"/>
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                        <filter string="Deadline Date" name="deadline_date" context="{'group_by':'deadline_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record id="request_action" model="ir.actions.act_window">
            <field name="name">All requests</field>
            <field name="res_model">request.request</field>
            <field name="view_mode">list,form</field>

            <field name="path">all-requests</field>
            <field name="search_view_id" ref="request_search"/>
            <!--
            <field name="context">{'search_default_is_open': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tickets found. Let's create one!
                    </p><p>To get things done, plan activities and use the ticket status.<br/>
                    Collaborate efficiently by chatting in real-time or via email.
                </p>
            </field>
            -->
        </record>

        <menuitem
            id="mennu_request_root"
            name="Requests"
            sequence="100"
        >
            <!--
            <menuitem
                id="menu_my_request"
                name="My request"
                action="nexources_request.request_action"
                sequence="5"
            />
            -->
            <menuitem
                id="menu_all_request"
                name="All requests"
                action="nexources_request.request_action"
                sequence="10"
            />

            <menuitem
                id="menu_request_employee"
                name="Employees"
                action="hr.open_view_employee_list_my"
                sequence="15"
            />
        </menuitem>
    </data>
</odoo>
